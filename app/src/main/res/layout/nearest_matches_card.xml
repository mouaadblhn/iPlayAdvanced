<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="84dp"
    android:layout_margin="4dp"
    android:paddingHorizontal="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="66dp"
        android:layout_height="66dp"
        app:cardCornerRadius="13dp"
        android:layout_gravity="center_vertical">
        <ImageView
            android:id="@+id/nearest_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/card_img_3" />


    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:paddingHorizontal="20dp">

            <TextView
                android:id="@+id/nearest_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Match name"
                android:textColor="@color/purpleDark"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/nearest_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nearest_name"
                android:layout_marginTop="2dp"
                android:drawablePadding="4dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Taroudant"
                android:textColor="@color/grayDark"
                android:textSize="12sp"/>
        </RelativeLayout>

        <Button
            android:id="@+id/detail_btn"
            style="@style/gray_btn"
            android:layout_width="77dp"
            android:layout_height="32dp"
            android:text="Detail" />
    </LinearLayout>
</LinearLayout>